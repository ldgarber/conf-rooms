<div class="container">
  <div class="centered">
    <h1>Happy Fun Conference Rooms!</h1>
    <%= link_to "BOOK A ROOM", new_meeting_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
</div>
<%= month_calendar events: @meetings do |date, meetings| %> 
  <%= date.strftime("%d") %>

  <% meetings.each do |meeting| %> 
    <div class="meeting-room-<%=meeting.room.id%>">
      <%= meeting.room.name %> 
      booked by <%= (meeting.user.name != nil) ? meeting.user.name : meeting.user.email %>
      from <%= meeting.start %> to <%= meeting.end %> 
    </div> 
  <% end %> 
<% end %> 
